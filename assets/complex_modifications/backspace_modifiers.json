{
    "title": "Exchange 'delete whole word' and 'delete whole line' shortcuts",
    "rules": [
        {
            "description": "Change Control+Backspace to Option+Backspace",
            "manipulators": [
                {
                    "from": {
                        "key_code": "delete_or_backspace",
                        "modifiers": {
                            "mandatory": [
                                "control"
                            ],
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "delete_or_backspace",
                            "modifiers": [
                                "option"
                            ]
                        }
                    ],
                    "type": "basic"
                }
            ]
        },
        {
            "description": "Change Control+Delete to Option+Delete",
            "manipulators": [
                {
                    "from": {
                        "key_code": "delete_forward",
                        "modifiers": {
                            "mandatory": [
                                "control"
                            ],
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "delete_forward",
                            "modifiers": [
                                "option"
                            ]
                        }
                    ],
                    "type": "basic"
                }
            ]
        }
    ]
}